<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="vertical">
    <!-- 关闭按钮框 -->
    <RelativeLayout
        android:id="@+id/top_fail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_status_red">

        <Button
            android:id="@+id/fail_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/title_status_red"
            android:onClick="failClose"
            android:text="关闭"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="我的红包"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_fail"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageButton
                android:id="@+id/head_img_fail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/seller"/>

            <TextView
                android:id="@+id/name_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_img_fail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="商家"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_fail"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="手慢了,红包派完了"
                android:textColor="@color/yellow"
                android:textSize="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/fail_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="查看我的红包记录"
                android:textColor="#0000ff"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageView_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>